@model CaptureTheIsland.Models.AdminDashboardViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Admin Control Center";

    // current logged-in user's email (lowercase) for comparison
    var currentUserEmail = User?.Identity?.Name?.ToLowerInvariant();
}

<style>
    body {
        background-color: #121820 !important;
        color: #e4e4e4 !important;
    }

    .admin-wrapper {
        max-width: 1200px;
        margin: 40px auto;
        padding: 20px;
        animation: fadeIn 0.8s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    h1 {
        font-size: 2.3rem;
        font-weight: 700;
        margin-bottom: 25px;
    }

    /* GLASS PANELS */
    .glass-card {
        background: rgba(255,255,255,0.04);
        border: 1px solid rgba(0,255,255,0.12);
        backdrop-filter: blur(8px);
        padding: 22px;
        border-radius: 12px;
        margin-bottom: 25px;
        transition: 0.3s ease;
        box-shadow: 0 0 15px rgba(0,255,255,0.05);
        position: relative;
        overflow: hidden;
    }

        .glass-card:hover {
            border-color: #00eaff;
            box-shadow: 0 0 25px rgba(0,255,255,0.18);
        }

        .glass-card::before {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: 12px;
            padding: 2px;
            background: linear-gradient(120deg, transparent 40%, rgba(0,255,255,0.5), transparent 60%);
            mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            animation: rotateBorder 4s linear infinite;
        }

    @@keyframes rotateBorder {
        to {
            transform: rotate(360deg);
        }
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 18px;
    }

    @@media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    /* User table styles: borders, alternating rows and padding */
    #userTable {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid rgba(255,255,255,0.06);
        margin-top: 0.75rem;
        table-layout: auto;
    }

    #userTable th,
    #userTable td {
        border: 1px solid rgba(255,255,255,0.04);
        padding: 0.65rem 0.9rem;
        text-align: left;
        vertical-align: middle;
        color: #e4e4e4;
    }

    /* clickable header styles */
    #userTable thead th[onclick] {
        cursor: pointer;
        transition: background-color 150ms ease, color 150ms ease, transform 100ms ease;
    }

    #userTable thead th[onclick]:hover {
        background: rgba(0,235,255,0.06);
        color: #ffffff;
        transform: translateY(-1px);
    }

    #userTable thead th {
        background: rgba(255,255,255,0.03);
        font-weight: 600;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    #userTable tbody tr:nth-child(odd) {
        background: rgba(255,255,255,0.02);
    }

    #userTable tbody tr:nth-child(even) {
        background: rgba(255,255,255,0.01);
    }

    #userTable tbody tr:hover {
        background: rgba(0,235,255,0.04);
    }

    .email-cell {
        min-width: 240px;
        max-width: 520px;
        word-break: break-word;
        padding-right: 1rem;
    }

    /* smaller button appearance inside table cells */
    .btn-small {
        padding: 0.28rem 0.55rem;
        font-size: 0.85rem;
        border-radius: 4px;
    }

    /* add small vertical margins to action buttons inside the table */
    #userTable td .btn,
    #userTable td .btn-small {
        margin-top: 0.25rem;
        margin-bottom: 0.25rem;
    }

    /* Toggle / Revoke Admin button styles */
    .btn-revoke-admin {
        background-color: #dc3545; /* red */
        color: #ffffff;
        border: 1px solid #dc3545;
        transition: background-color 150ms ease, color 150ms ease;
    }

    .btn-revoke-admin:hover,
    .btn-revoke-admin:focus {
        background-color: #c82333; /* slightly darker red on hover/focus */
        color: #ffffff;
        border-color: #c82333;
    }
</style>

<div class="admin-wrapper">

    <h1>🛡️ Admin Control Center</h1>

    @* Normal status/error messages (existing) *@
    @{
        var success = TempData["StatusMessage"] ?? TempData["Success"];
        var error = TempData["ErrorMessage"] ?? TempData["Error"];
    }
    @if (success is string s && !string.IsNullOrWhiteSpace(s))
    {
        <div class="alert alert-success" role="alert">@s</div>
    }
    @if (error is string e && !string.IsNullOrWhiteSpace(e))
    {
        <div class="alert alert-danger" role="alert">@e</div>
    }

    <!-- === STATS GRID === -->
    <div class="stats-grid">

        <div class="glass-card">
            <div class="stat-label">Total Users</div>
            <div class="stat-number">@Model.TotalUsers</div>
        </div>

        <div class="glass-card">
            <div class="stat-label">Admins</div>
            <div class="stat-number">@Model.AdminCount</div>
        </div>

        <div class="glass-card">
            <div class="stat-label">Registered Challenges</div>
            <div class="stat-number">@Model.TotalChallenges</div>
        </div>

        <div class="glass-card">
            <div class="stat-label">Completed (All Users)</div>
            <div class="stat-number">@Model.TotalCompletedChallenges</div>
        </div>

    </div>

    <!-- === USER TABLE WITH SEARCH + SORTING === -->
    <div class="glass-card">
        <h3>👥 User Overview</h3>

        <input id="userSearch" type="text" placeholder="Search users...">

        <table id="userTable">
            <thead>
                <tr>
                    <th style="min-width:240px;" onclick="sortTable(0)">Email</th>
                    <th style="width:110px;" onclick="sortTable(1)">Role</th>
                    <th style="width:130px;" onclick="sortTable(2)">Joined</th>
                    <th style="width:110px;" onclick="sortTable(3)">Challenges</th>
                    <th style="width:140px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var u in Model.Users)
                {
                    <tr>
                        <td class="email-cell">@u.Email</td>
                        <td>
                            @if (u.Role == "Admin")
                            {
                                <span class="badge-admin">Admin</span>
                            }
                            else
                            {
                                <span class="badge-user">User</span>
                            }
                        </td>
                        <td>@u.DateCreated.ToShortDateString()</td>
                        <td>@u.CompletedChallenges</td>
                        <td>
                            @{
                                var isCurrentUserRow = currentUserEmail != null && currentUserEmail == (u.Email ?? "").ToLowerInvariant();
                            }

                            @* Hide action buttons for the currently signed-in user *@
                            @if (!isCurrentUserRow)
                            {
                                <form action="@Url.Action("ToggleAdmin", "Account", new { area = "" })" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="email" value="@u.Email" />
                                    <input type="hidden" name="makeAdmin" value="@(u.Role == "Admin" ? "false" : "true")" />
                                    <button type="submit" class="@(u.Role == "Admin" ? "btn btn-sm btn-revoke-admin" : "btn btn-sm btn-primary")">
                                        @(u.Role == "Admin" ? "Revoke Admin" : "Make Admin")
                                    </button>
                                </form>

                                <form action="@Url.Action("DeleteUser", "Account", new { area = "" })" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete user @u.Email? This action cannot be undone.');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="email" value="@u.Email" />
                                    <button type="submit" class="btn btn-sm btn-danger">Delete User</button>
                                </form>
                            }
                            else
                            {
                                <span>No Actions Available</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <p style="opacity: 0.7; font-size: 0.8rem; margin-top:10px;">
            *Challenge counts reflect progress saved in each user's browser.
        </p>
    </div>

</div>

<!-- === SEARCH & SORTING JAVASCRIPT === -->
<script>
    document.getElementById("userSearch").addEventListener("keyup", function () {
        const filter = this.value.toLowerCase();
        const rows = document.querySelectorAll("#userTable tbody tr");

        rows.forEach(row => {
            row.style.display = row.textContent.toLowerCase().includes(filter)
                ? ""
                : "none";
        });
    });

    function sortTable(col) {
        const table = document.getElementById("userTable");
        const rows = Array.from(table.rows).slice(1);
        const isAsc = table.getAttribute("data-sort") != "asc";

        rows.sort((a, b) => {
            const x = a.cells[col].innerText.toLowerCase();
            const y = b.cells[col].innerText.toLowerCase();
            return isAsc ? x.localeCompare(y) : y.localeCompare(x);
        });

        table.setAttribute("data-sort", isAsc ? "asc" : "desc");
        rows.forEach(row => table.tBodies[0].appendChild(row));
    }
</script>
