@model CaptureTheIsland.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<style>
    /* Page Layout */
    .register-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Card Styling */
    .register-card {
        background: rgba(30, 30, 30, 0.8);
        border: 1px solid #444;
        border-radius: 14px;
        padding: 30px;
        box-shadow: 0 0 25px rgba(0, 255, 255, 0.1);
        transition: 0.25s ease-in-out;
    }

        .register-card:hover {
            box-shadow: 0 0 35px rgba(0, 255, 255, 0.25);
            transform: translateY(-2px);
        }

    /* Inputs */
    .register-input {
        background: #111 !important;
        border: 1px solid #555 !important;
        color: white !important;
    }

        .register-input:focus {
            border-color: cyan !important;
            box-shadow: 0 0 10px rgba(0,255,255,0.4);
        }

    /* Button */
    .register-btn {
        background: linear-gradient(90deg, #00d4ff, #007bff);
        border: none;
        color: white;
        padding: 10px;
        border-radius: 8px;
        font-weight: bold;
        font-size: 1.1rem;
        text-align: center;
        transition: 0.25s;
    }

        .register-btn:hover {
            opacity: 0.85;
            transform: translateY(-2px);
            box-shadow: 0 0 12px rgba(0, 255, 255, 0.4);
        }

</style>

<div class="register-wrapper">
    <div class="col-md-5">
        <div class="register-card">

            <h2 class="text-center mb-4 text-light fw-bold">
                🆕 Create Account
            </h2>

            <form method="post">

                <!-- Validation Summary (Identity Errors) -->
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Email -->
                <div class="mb-3">
                    <label class="form-label text-light">Email</label>
                    <input asp-for="Email" class="form-control register-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label class="form-label text-light">Password</label>
                    <input asp-for="Password" type="password" class="form-control register-input" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mb-3">
                    <label class="form-label text-light">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control register-input" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Register Button -->
                <button type="submit" class="register-btn w-100">
                    Register
                </button>

                <hr class="border-secondary">

                <div class="text-center">
                    <a href="@Url.Action("Login", "Account")" class="text-info">
                        Already have an account? <strong>Sign in</strong>
                    </a>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
