@model CaptureTheIsland.Models.LoginViewModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card bg-secondary bg-opacity-25 border-light shadow-lg">
            <div class="card-body">

                <h2 class="text-center mb-4" style="color: white !important;">Sign In</h2>

                @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label class="form-label" style="color: white !important;">Email</label>
                        <input asp-for="Email" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" style="color: white !important;">Password</label>
                        <input asp-for="Password" type="password" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-outline-light w-100">Login</button>

                    <hr class="border-secondary">

                    <div class="text-center">
                        <a href="@Url.Action("Register", "Account")" class="text-info">
                            Don’t have an account? Register
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
