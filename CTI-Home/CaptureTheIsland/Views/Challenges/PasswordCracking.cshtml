@{
    ViewData["Title"] = "Password Cracking";
}

<div class="container">

    <!-- Header Card -->
    <div class="card bg-secondary bg-opacity-25 border-light shadow-lg mb-4">
        <div class="card-body text-light">

            <h2 class="text-center mb-3 fw-bold" style="color:white;">
                🔐 Password Cracking Challenges
            </h2>

            <p>
                These challenges walk you through cracking weak passwords using real-world tools like
                <strong>rockyou.txt</strong>, <strong>Ophcrack</strong>, and <strong>John the Ripper</strong>.
            </p>

            <p class="mb-0">
                Start with the <strong>Easy</strong> RockYou hashes and progress into
                <strong>Windows NTLM</strong> and <strong>yescrypt</strong> attacks.
            </p>

        </div>
    </div>


    <!-- Challenge Cards -->
    <div class="row row-cols-1 row-cols-md-3 g-4">

        <!-- Easy -->
        <div class="col">
            <a href="/Challenges/RockYou"
               class="challenge-card card h-100 text-decoration-none bg-dark border border-secondary text-light">

                <div class="card-body">
                    <h4 class="card-title fw-bold">Easy — RockYou Hashes</h4>

                    <p class="card-text small">
                        Crack three MD5 hashes using the famous <code>rockyou.txt</code> wordlist.
                        A perfect starting point for password cracking.
                    </p>

                    <span class="badge bg-success px-3 py-1">Easy</span>
                </div>

            </a>
        </div>

        <!-- Medium -->
        <div class="col">
            <a href="/Challenges/WindowsHashes"
               class="challenge-card card h-100 text-decoration-none bg-dark border border-secondary text-light">

                <div class="card-body">
                    <h4 class="card-title fw-bold">Medium — Windows NTLM (Ophcrack)</h4>

                    <p class="card-text small">
                        Use Ophcrack and XP rainbow tables to crack NTLM hashes from a Windows machine.
                    </p>

                    <span class="badge bg-warning text-dark px-3 py-1">Medium</span>
                </div>

            </a>
        </div>

        <!-- Hard -->
        <div class="col">
            <a href="/Challenges/KaliShadow"
               class="challenge-card card h-100 text-decoration-none bg-dark border border-secondary text-light">

                <div class="card-body">
                    <h4 class="card-title fw-bold">Hard — Kali Linux Shadow (yescrypt)</h4>

                    <p class="card-text small">
                        Analyze a Kali Linux <code>/etc/shadow</code> entry and crack a yescrypt hash with John the Ripper.
                    </p>

                    <span class="badge bg-danger px-3 py-1">Hard</span>
                </div>

            </a>
        </div>

    </div>


    <!-- Back Button -->
    <a href="/Challenges" class="btn btn-outline-info mt-4">
        ← Back to Challenge Categories
    </a>

</div>

<!-- Additional Styling -->
<style>
    .challenge-card {
        transition: 0.25s ease-in-out;
        border-radius: 10px;
    }

        .challenge-card:hover {
            transform: translateY(-5px);
            border-color: cyan !important;
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.35);
        }
</style>
