@{
    ViewData["Title"] = "Password Cracking";
}

<div class="container">

    <div class="card bg-secondary bg-opacity-25 border-light shadow-lg mb-4">
        <div class="card-body text-light">
            <h2 class="text-center mb-3" style="color:white;">Password Cracking Challenges</h2>
            <p>
                These challenges walk you through cracking weak passwords using real-world tools like
                <strong>rockyou.txt</strong>, <strong>Ophcrack</strong>, and <strong>John the Ripper</strong>
                on Kali Linux.
            </p>
            <p class="mb-0">
                Start with the <strong>Easy</strong> RockYou hashes and work your way up to
                <strong>Windows NTLM</strong> and <strong>Kali yescrypt</strong> shadow attacks.
            </p>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">

        <!-- EASY -->
        <div class="col">
            <a href="/Challenges/RockYou"
               class="card h-100 text-decoration-none bg-dark border border-secondary">
                <div class="card-body text-light">
                    <h4 class="card-title">Easy — RockYou Hashes</h4>
                    <p class="card-text small">
                        Crack three MD5 hashes using the classic <code>rockyou.txt</code> wordlist.
                        Great first step into password cracking.
                    </p>
                    <span class="badge bg-success">Easy</span>
                </div>
            </a>
        </div>

        <!-- MEDIUM -->
        <div class="col">
            <a href="/Challenges/WindowsHashes"
               class="card h-100 text-decoration-none bg-dark border border-secondary">
                <div class="card-body text-light">
                    <h4 class="card-title">Medium — Windows NTLM (Ophcrack)</h4>
                    <p class="card-text small">
                        Use Ophcrack and XP tables to crack NTLM hashes from a Windows system.
                    </p>
                    <span class="badge bg-warning text-dark">Medium</span>
                </div>
            </a>
        </div>

        <!-- HARD -->
        <div class="col">
            <a href="/Challenges/KaliShadow"
               class="card h-100 text-decoration-none bg-dark border border-secondary">
                <div class="card-body text-light">
                    <h4 class="card-title">Hard — Kali Linux Shadow (yescrypt)</h4>
                    <p class="card-text small">
                        Analyze a Kali Linux <code>/etc/shadow</code> entry and crack a yescrypt hash using John.
                    </p>
                    <span class="badge bg-danger">Hard</span>
                </div>
            </a>
        </div>

    </div>

    <a href="/Challenges" class="btn btn-secondary mt-4">← Back to Challenge Categories</a>

</div>

