@{
    ViewData["Title"] = "Cryptography Challenges";
}

<div class="container">

    <!-- Header Card -->
    <div class="card bg-secondary bg-opacity-25 border-light shadow-lg mb-4">
        <div class="card-body text-light">

            <h2 class="text-center mb-3 fw-bold" style="color:white;">
                🔐 Cryptography Challenges
            </h2>

            <p>
                Learn classic cryptography fundamentals such as number base conversions,
                Vigenère ciphers, and RSA concepts. Start from the basics and work your way up!
            </p>

        </div>
    </div>


    <!-- Cryptography Challenge Cards -->
    <div class="row row-cols-1 row-cols-md-3 g-4">

        <!-- EASY -->
        <div class="col">
            <a href="/Challenges/CryptoEasy"
               class="crypto-card card h-100 bg-dark border border-secondary text-light text-decoration-none">

                <div class="card-body">
                    <h4 class="card-title fw-bold">Easy — Number Bases</h4>

                    <p class="card-text small">
                        Practice decoding hexadecimal, Base64, and binary values.
                        A great introduction to cryptography basics.
                    </p>

                    <span class="badge bg-success px-3 py-1">Easy</span>
                </div>

            </a>
        </div>


        <!-- MEDIUM -->
        <div class="col">
            <a href="/Challenges/CryptoMedium"
               class="crypto-card card h-100 bg-dark border border-secondary text-light text-decoration-none">

                <div class="card-body">
                    <h4 class="card-title fw-bold">Medium — Vigenère Cipher</h4>

                    <p class="card-text small">
                        Decrypt a French Vigenère-encrypted message using the key:
                        <strong>qizkwcgqbs</strong>.
                    </p>

                    <span class="badge bg-warning text-dark px-3 py-1">Medium</span>
                </div>

            </a>
        </div>


        
        <!-- HARD -->
        <div class="col">
            <a href="/Challenges/CryptoHard"
               class="crypto-card card h-100 bg-dark border border-secondary text-light text-decoration-none">

                <div class="card-body">
                    <h4 class="card-title fw-bold">Hard — RSA</h4>

                    <p class="card-text small">
                        Tackle an RSA challenge: factor n, derive the private key, and recover the flag.
                    </p>

                    <span class="badge bg-danger px-3 py-1">Hard</span>
                </div>

            </a>
        </div>


    <!-- Back Button -->
    <a href="/Challenges" class="btn btn-outline-info mt-4">
        ← Back to Challenge Categories
    </a>

</div>


<!-- Hover Glow Styling -->
<style>
    .crypto-card {
        transition: 0.25s ease-in-out;
        border-radius: 10px;
    }

        .crypto-card:hover:not(.disabled) {
            transform: translateY(-5px);
            border-color: cyan !important;
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.35);
        }

        .crypto-card.disabled {
            opacity: 0.5;
            cursor: default;
        }
</style>
