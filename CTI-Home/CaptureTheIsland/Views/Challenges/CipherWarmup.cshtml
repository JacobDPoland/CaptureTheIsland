@{
    ViewData["Title"] = "Cipher Warm-up";
}

<h2 class="text-light">Cipher Warm-up</h2>

<p class="text-light">Decode the following ROT13 cipher text to find the flag.</p>

<pre class="text-info">Uryyb, guvf vf zl synt.</pre>

<form asp-controller="Challenges" asp-action="SubmitCipherWarmup" method="post" class="mt-3">
    <input name="flag" class="form-control bg-dark text-light border-secondary"
           placeholder="Enter flag here" />

    <button type="submit" class="btn btn-primary mt-2">Submit Flag</button>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">
        ✅ @TempData["Success"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">
        ❌ @TempData["Error"]
    </div>
}

<a href="/Challenges/ApacheAccessSleuth" class="btn btn-secondary mt-4">Next Challenge</a>

