@{
    ViewData["Title"] = "Scripting Challenges";
}

<div class="container">

    <!-- Header -->
    <div class="card bg-secondary bg-opacity-25 border-light shadow-lg mb-4">
        <div class="card-body text-light">

            <h2 class="text-center mb-3 fw-bold" style="color:white;">
                🐍 Scripting Challenges
            </h2>

            <p>
                These challenges introduce you to Python scripting fundamentals, debugging,
                program logic, and reverse engineering. Start with the beginner program
                and work your way up to analyzing compiled Python bytecode.
            </p>
        </div>
    </div>


    <!-- Challenge Grid -->
    <div class="row row-cols-1 row-cols-md-3 g-4">

        <!-- EASY -->
        <div class="col">
            <a href="/Challenges/PythonEasy"
               class="script-card card h-100 bg-dark border border-secondary text-light text-decoration-none">

                <div class="card-body">
                    <h4 class="card-title fw-bold">Easy — Python Basics</h4>

                    <p class="card-text small">
                        Analyze a simple Python script that verifies a password using ASCII math.
                    </p>

                    <span class="badge bg-success px-3 py-1">Easy</span>
                </div>

            </a>
        </div>

        <!-- MEDIUM -->
        <div class="col">
            <a href="/Challenges/PythonMedium"
               class="script-card card h-100 bg-dark border border-secondary text-light text-decoration-none">

                <div class="card-body">
                    <h4 class="card-title fw-bold">Medium — Python Bytecode</h4>

                    <p class="card-text small">
                        Reverse-engineer a compiled <code>.pyc</code> program using <b>uncompyle6</b>.
                    </p>

                    <span class="badge bg-warning text-dark px-3 py-1">Medium</span>
                </div>

            </a>
        </div>

        <!-- HARD -->
        <div class="col">
            <a href="#"
               class="script-card card h-100 bg-dark border border-secondary text-light text-decoration-none disabled">

                <div class="card-body">
                    <h4 class="card-title fw-bold">Hard — Python Exploitation</h4>

                    <p class="card-text small">
                        Advanced automation, decoding, and socket exploitation.<br />
                        <span class="text-danger">Coming soon…</span>
                    </p>

                    <span class="badge bg-danger px-3 py-1">Hard</span>
                </div>

            </a>
        </div>

    </div>


    <!-- Back Button -->
    <a href="/Challenges" class="btn btn-outline-info mt-4">
        ← Back to Challenge Categories
    </a>

</div>


<!-- Hover Glow Styling -->
<style>
    .script-card {
        transition: 0.25s ease-in-out;
        border-radius: 10px;
    }

        .script-card:hover {
            transform: translateY(-5px);
            border-color: cyan !important;
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.35);
        }

        .script-card.disabled:hover {
            transform: none;
            box-shadow: none;
            border-color: gray !important;
        }
</style>

