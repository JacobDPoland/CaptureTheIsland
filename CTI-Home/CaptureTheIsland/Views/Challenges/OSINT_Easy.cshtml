@{
    ViewData["Title"] = "OSINT Easy — Metadata";
}

<div class="card bg-secondary bg-opacity-25 border-light shadow-lg p-4">

    <h2 class="text-center mb-4" style="color:white;">🟢 Easy — Metadata Analysis</h2>

    <p class="text-light">
        This challenge introduces you to <strong>EXIF metadata extraction</strong>.
        Download the image and analyze it using any EXIF metadata viewer.
    </p>

    <div class="text-center mb-3">
        <img src="/images/meta.jpg" class="img-fluid rounded border" alt="Metadata Challenge Image" />
    </div>

    <a class="btn btn-outline-info mb-4"
       href="/images/meta.jpg" download>
        ⬇ Download Image
    </a>

    <h4 class="text-light">Useful Tools:</h4>
    <ul class="text-light">
        <li><a href="https://www.metadata2go.com" target="_blank">metadata2go.com</a></li>
        <li><a href="https://exifinfo.org" target="_blank">EXIF Info Viewer</a></li>
        <li><a href="https://www.gps-coordinates.net" target="_blank">GPS Coordinate Converter</a></li>
    </ul>

    <hr class="border-secondary" />

    <h4 class="text-light mb-3">📌 Questions</h4>

    <!-- ====================== -->
    <!--      SUBMISSION FORM   -->
    <!-- ====================== -->
    <form method="post" asp-action="SubmitOSINTEasy" class="text-light">

        <div class="mb-3">
            <label class="form-label">1. When was the image created?</label>
            <input name="q1" class="form-control bg-dark text-light border-secondary"
                   placeholder="YYYY-MM-DD HH:MM" />
        </div>

        <div class="mb-3">
            <label class="form-label">2. Image size (pixels)</label>
            <input name="q2" class="form-control bg-dark text-light border-secondary"
                   placeholder="ex: 1024x768" />
        </div>

        <div class="mb-3">
            <label class="form-label">3. Camera Make</label>
            <input name="q3" class="form-control bg-dark text-light border-secondary"
                   placeholder="ex: Apple" />
        </div>

        <div class="mb-3">
            <label class="form-label">4. Camera Model</label>
            <input name="q4" class="form-control bg-dark text-light border-secondary"
                   placeholder="ex: iPhone 5" />
        </div>

        <div class="mb-3">
            <label class="form-label">5. Exposure Time</label>
            <input name="q5" class="form-control bg-dark text-light border-secondary"
                   placeholder="ex: 1/640" />
        </div>

        <div class="mb-3">
            <label class="form-label">6. GPS Coordinates</label>
            <input name="q6" class="form-control bg-dark text-light border-secondary"
                   placeholder="ex: 39.8750, 20.0100" />
        </div>

        <button type="submit" class="btn btn-primary mt-2">Submit Answers</button>
    </form>

    <!-- ====================== -->
    <!--  SUCCESS & ERROR BOXES -->
    <!-- ====================== -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">
            ✅ @TempData["Success"]
        </div>

        <script>
            markChallengeComplete("OSINT_Easy");
        </script>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">
            ❌ @TempData["Error"]
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                markChallengeComplete("OSINT_Easy");
            });
        </script>
    }

    <hr class="border-secondary" />

    <!-- Walkthrough -->
    <details class="mt-3">
        <summary class="text-info">📘 Walkthrough (Click to expand)</summary>
        <div class="text-light mt-2">
            <p>Upload the image to a metadata viewer...</p>
            <ul>
                <li><strong>Create Date:</strong> 2015-05-15 02:14</li>
                <li><strong>Size:</strong> 1024x768</li>
                <li><strong>Make:</strong> Apple</li>
                <li><strong>Model:</strong> iPhone 5</li>
                <li><strong>Exposure:</strong> 1/640</li>
                <li><strong>GPS:</strong> 39.8750,20.0100</li>
            </ul>
        </div>
    </details>

    <div class="d-flex justify-content-between mt-4">
        <a href="/Challenges/OSINT" class="btn btn-outline-info">← Back to OSINT</a>
        <a href="/Challenges/OSINT_Medium" class="btn btn-outline-info">Next Challenge →</a>
    </div>




</div>

