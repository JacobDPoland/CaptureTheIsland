@{
    ViewData["Title"] = "Forensics Challenges";
}

<div class="container">

    <!-- Header Card -->
    <div class="card bg-secondary bg-opacity-25 border-light shadow-lg mb-4">
        <div class="card-body text-light">

            <h2 class="text-center mb-3 fw-bold" style="color:white;">
                🔍 Forensics Challenges
            </h2>

            <p>
                Digital forensics challenges test your ability to recover hidden evidence, analyze artifacts,
                inspect metadata, and uncover what happened behind the scenes.
            </p>

            <p class="mb-0">
                These tasks simulate real-world investigations involving deleted files, encoded secrets,
                tampered data, and version control trails.
            </p>

        </div>
    </div>


    <!-- Challenge Cards -->
    <div class="row row-cols-1 row-cols-md-3 g-4">

        <!-- EASY -->
        <div class="col">
            <a href="/Challenges/ForensicsEasy"
               class="forensic-card card h-100 bg-dark border border-secondary text-light text-decoration-none">

                <div class="card-body">
                    <h4 class="card-title fw-bold">Easy — Version Control</h4>

                    <p class="card-text small">
                        Inspect a Git repository backup to uncover deleted evidence
                        using <code>git log</code> and <code>git show</code>.
                    </p>

                    <span class="badge bg-success px-3 py-1">Easy</span>
                </div>

            </a>
        </div>


        <!-- MEDIUM (Coming Soon) -->
        <div class="col">
            <div class="forensic-card card h-100 bg-dark border border-secondary text-light disabled">

                <div class="card-body">
                    <h4 class="card-title fw-bold">Medium — Coming Soon</h4>

                    <p class="card-text small text-warning">
                        More forensic challenges will be added soon!
                    </p>

                    <span class="badge bg-warning text-dark px-3 py-1">Medium</span>
                </div>

            </div>
        </div>


        <!-- HARD (Coming Soon) -->
        <div class="col">
            <div class="forensic-card card h-100 bg-dark border border-secondary text-light disabled">

                <div class="card-body">
                    <h4 class="card-title fw-bold">Hard — Coming Soon</h4>

                    <p class="card-text small text-warning">
                        Advanced forensic investigations are on the way.
                    </p>

                    <span class="badge bg-danger px-3 py-1">Hard</span>
                </div>

            </div>
        </div>

    </div>

    <!-- Back Button -->
    <a href="/Challenges" class="btn btn-outline-info mt-4">
        ← Back to Challenge Categories
    </a>

</div>


<!-- Hover Glow Styling -->
<style>
    .forensic-card {
        transition: 0.25s ease-in-out;
        border-radius: 10px;
    }

        .forensic-card:hover:not(.disabled) {
            transform: translateY(-5px);
            border-color: cyan !important;
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.35);
        }

        .forensic-card.disabled {
            opacity: 0.5;
            cursor: default;
        }
</style>

