@{
    ViewData["Title"] = "Challenges";
}

<div class="container">

    <!-- 🔥 Intro Card -->
    <div class="card bg-dark border-secondary shadow-lg mb-4">
        <div class="card-body text-light">

            <h2 class="text-center mb-3 fw-bold">
                🧭 Before You Begin
            </h2>

            <p>
                Capture The Flag (CTF) challenges often require cybersecurity tools and
                penetration testing utilities that are best available in
                <strong class="text-info">Kali Linux</strong>.
            </p>

            <ul>
                <li>Hash-cracking tools (Hashcat, John the Ripper)</li>
                <li>Network analysis utilities (Nmap, Wireshark)</li>
                <li>Forensics tools</li>
                <li>OSINT frameworks</li>
                <li>Linux command-line environment used in cybersecurity work</li>
            </ul>

            <p class="mt-3">If you don’t have Kali installed, use this guide:</p>

            <a href="https://www.kali.org/docs/virtualization/install-virtualbox-guest-vm/"
               target="_blank"
               class="btn btn-outline-info">
                🔗 Install Kali Linux on VirtualBox
            </a>
        </div>
    </div>

    <!-- 🔥 Categories Section -->
    <div class="card bg-dark border-secondary shadow-lg">
        <div class="card-body">

            <h2 class="text-center mb-4 fw-bold">🎯 Challenge Categories</h2>

            <div class="row row-cols-1 row-cols-md-2 g-3">

                <!-- Sample -->
                <div class="col">
                    <a href="/Challenges/Sample" class="challenge-card text-decoration-none">
                        <div class="p-3 bg-secondary bg-opacity-25 border rounded shadow-sm">
                            <h5 class="text-warning fw-bold">🔥 Sample Challenges</h5>
                            <p class="text-light small mb-0">Warm-up tasks: cipher, logs, hashes, images</p>
                        </div>
                    </a>
                </div>

                <!-- Password Cracking -->
                <div class="col">
                    <a href="/Challenges/PasswordCracking" class="challenge-card text-decoration-none">
                        <div class="p-3 bg-secondary bg-opacity-25 border rounded shadow-sm">
                            <h5 class="text-info fw-bold">🔐 Password Cracking</h5>
                            <p class="text-light small mb-0">Hashcat, John, rainbow tables, rockyou</p>
                        </div>
                    </a>
                </div>

                <!-- Log Analysis -->
                <div class="col">
                    <a href="/Challenges/LogAnalysis" class="challenge-card text-decoration-none">
                        <div class="p-3 bg-secondary bg-opacity-25 border rounded shadow-sm">
                            <h5 class="text-success fw-bold">📄 Log Analysis</h5>
                            <p class="text-light small mb-0">System logs, forensics, incident detection</p>
                        </div>
                    </a>
                </div>

                <!-- Cryptography -->
                <div class="col">
                    <a href="/Challenges/Cryptography" class="challenge-card text-decoration-none">
                        <div class="p-3 bg-secondary bg-opacity-25 border rounded shadow-sm">
                            <h5 class="text-primary fw-bold">🔑 Cryptography</h5>
                            <p class="text-light small mb-0">Vigenère, RSA, Base64, binary, ciphers</p>
                        </div>
                    </a>
                </div>

                <!-- Forensics -->
                <div class="col">
                    <a href="/Challenges/Forensics" class="challenge-card text-decoration-none">
                        <div class="p-3 bg-secondary bg-opacity-25 border rounded shadow-sm">
                            <h5 class="text-danger fw-bold">🧪 Forensics</h5>
                            <p class="text-light small mb-0">Memory, file system, backups, metadata</p>
                        </div>
                    </a>
                </div>

                <!-- OSINT -->
                <div class="col">
                    <a href="/Challenges/OSINT" class="challenge-card text-decoration-none">
                        <div class="p-3 bg-secondary bg-opacity-25 border rounded shadow-sm">
                            <h5 class="text-warning fw-bold">🌍 OSINT</h5>
                            <p class="text-light small mb-0">Online investigation, footprinting</p>
                        </div>
                    </a>
                </div>

                <!-- Networking -->
                <div class="col">
                    <a href="/Challenges/Networking" class="challenge-card text-decoration-none">
                        <div class="p-3 bg-secondary bg-opacity-25 border rounded shadow-sm">
                            <h5 class="text-info fw-bold">🌐 Networking</h5>
                            <p class="text-light small mb-0">Packets, PCAPs, protocols, Wireshark</p>
                        </div>
                    </a>
                </div>

                <!-- Scripting -->
                <div class="col">
                    <a href="/Challenges/Scripting" class="challenge-card text-decoration-none">
                        <div class="p-3 bg-secondary bg-opacity-25 border rounded shadow-sm">
                            <h5 class="text-light fw-bold">⚙️ Scripting</h5>
                            <p class="text-light small mb-0">Python automation & code-breaking</p>
                        </div>
                    </a>
                </div>

            </div>
        </div>
    </div>

</div>

