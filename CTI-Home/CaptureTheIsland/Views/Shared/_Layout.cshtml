@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Capture The Island</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-dark text-light">

    <!-- New: first focusable thing for keyboard users -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <header role="banner">
        <nav class="navbar navbar-expand-lg navbar-dark border-bottom border-secondary" aria-label="Primary">
            <div class="container">

                <a class="btn btn-outline-light me-3" href="@Url.Action("Index", "Home")" aria-label="Home">Home</a>
                <span class="navbar-brand fw-bold">Capture The Island</span>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#primaryNav" aria-controls="primaryNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="primaryNav">
                    <ul class="navbar-nav ms-auto">

                        <!-- High contrast toggle button -->
                        <li class="nav-item me-2">
                            <button type="button"
                                    id="hc-toggle"
                                    class="btn btn-outline-light"
                                    aria-pressed="false">
                                Enable high contrast
                            </button>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <!-- USER LOGGED IN -->
                            <li class="nav-item me-3 d-flex align-items-center text-info">
                                Welcome, @UserManager.GetUserName(User)
                            </li>

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-outline-danger">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- USER NOT LOGGED IN -->
                            <li class="nav-item">
                                <a class="btn btn-outline-light me-2" href="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-info" href="/Account/Register">Register</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main id="main-content" class="container my-5">
        @RenderBody()
    </main>

    <footer class="border-top border-secondary py-3 mt-auto">
        <div class="container">&copy; @DateTime.Now.Year Jacob Poland,David Valle â€” Capture The Island</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    <!-- Animation Script Below -->
    <script>
        (function () {
            const STORAGE_KEY = 'ctiAnimations';
            function animationsDisabled() { return localStorage.getItem(STORAGE_KEY) === 'off'; }
            function setAnimations(on) { localStorage.setItem(STORAGE_KEY, on ? 'on' : 'off'); }

            function refreshToggleUI() {
                const btn = document.getElementById('anim-toggle');
                if (!btn) return;
                const off = animationsDisabled();
                btn.textContent = off ? 'Enable animations' : 'Disable animations';
                // aria-pressed = true means animations are ON
                btn.setAttribute('aria-pressed', String(!off));
            }

            function applyState() {
                const off = animationsDisabled();
                const canvas = document.getElementById('title-canvas');
                const staticTitle = document.querySelector('#hero .static-title');
                if (canvas) canvas.style.display = off ? 'none' : 'block';
                if (staticTitle) staticTitle.style.display = off ? 'block' : 'none';
                if (window.CtiTitle && typeof window.CtiTitle.setRunning === 'function') {
                    window.CtiTitle.setRunning(!off);
                }
                refreshToggleUI();
            }

            document.addEventListener('DOMContentLoaded', function () {
                const btn = document.getElementById('anim-toggle');
                if (btn) {
                    btn.addEventListener('click', function () {
                        const off = animationsDisabled();
                        setAnimations(off);
                        applyState();
                    });
                }
                if (!localStorage.getItem(STORAGE_KEY)) {
                    localStorage.setItem(STORAGE_KEY, 'on');
                }
                applyState();
            });
        })();
    </script>

	<!-- High Contrast Script Below -->
    <script>
        (function () {
            const KEY = 'ctiHighContrast';

            function isOn() {
                return localStorage.getItem(KEY) === 'on';
            }

            function set(on) {
                localStorage.setItem(KEY, on ? 'on' : 'off');
            }

            function apply() {
                const on = isOn();
                // Toggle class on <body>
                document.body.classList.toggle('hc', on);

                // Update button UI
                const btn = document.getElementById('hc-toggle');
                if (btn) {
                    btn.textContent = on ? 'Disable high contrast' : 'Enable high contrast';
                    btn.setAttribute('aria-pressed', String(on));
                }
            }

            document.addEventListener('DOMContentLoaded', function () {
                // Initialize if missing
                if (!localStorage.getItem(KEY)) {
                    localStorage.setItem(KEY, 'off');
                }

                // Apply stored state on load
                apply();

                // Wire up click handler
                const btn = document.getElementById('hc-toggle');
                if (btn) {
                    btn.addEventListener('click', function () {
                        set(!isOn());
                        apply();
                    });
                }
            });
        })();
    </script>

</body>
</html>
