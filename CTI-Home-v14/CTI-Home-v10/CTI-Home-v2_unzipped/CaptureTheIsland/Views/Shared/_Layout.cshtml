<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Capture The Island</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-dark text-light">
    <header role="banner">
        <nav class="navbar navbar-expand-lg navbar-dark border-bottom border-secondary" aria-label="Primary">
            <div class="container">
                <a class="btn btn-outline-light me-3" href="@Url.Action("Index","Home")" aria-label="Home">Home</a>
                <span class="navbar-brand fw-bold">Capture The Island</span>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#primaryNav" aria-controls="primaryNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="primaryNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
                </div>
            </div>
        </nav>
    </header>

    <main id="main-content" class="container my-5">
        @RenderBody()
    </main>

    <footer class="border-top border-secondary py-3 mt-auto">
        <div class="container">&copy; @DateTime.Now.Year Jacob Poland â€” Capture The Island</div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    <script>
    (function() {
        const STORAGE_KEY = 'ctiAnimations'; // values: 'on'|'off'
        function animationsDisabled() { return localStorage.getItem(STORAGE_KEY) === 'off'; }
        function setAnimations(on) { localStorage.setItem(STORAGE_KEY, on ? 'on' : 'off'); }

        function refreshToggleUI(){
            const btn = document.getElementById('anim-toggle');
            if(!btn) return;
            const off = animationsDisabled();
            btn.textContent = off ? 'Enable animations' : 'Disable animations';
            btn.setAttribute('aria-pressed', String(off));
        }

        function applyState(){
            const off = animationsDisabled();
            const canvas = document.getElementById('title-canvas');
            const staticTitle = document.querySelector('#hero .static-title');
            if (canvas) {
                canvas.style.display = off ? 'none' : 'block';
            }
            if (staticTitle) {
                staticTitle.style.display = off ? 'block' : 'none';
            }
            if (window.CtiTitle && typeof window.CtiTitle.setRunning === 'function') {
                window.CtiTitle.setRunning(!off);
            }
            refreshToggleUI();
        }

        document.addEventListener('DOMContentLoaded', function(){
            const btn = document.getElementById('anim-toggle');
            if (btn) {
                btn.addEventListener('click', function(){
                    const off = animationsDisabled();
                    setAnimations(off); // toggle
                    applyState();
                });
            }
            // Initialize state on load
            if (!localStorage.getItem(STORAGE_KEY)) {
                localStorage.setItem(STORAGE_KEY, 'on');
            }
            applyState();
        });
    })();
    </script>

</body>
</html>